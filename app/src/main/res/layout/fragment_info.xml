<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/bg_content_color"
    tools:context=".UserInfoActivity">
    <ViewStub
        android:id="@+id/chat_view"
        android:inflatedId="@+id/inflate_chat_view"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout="@layout/viewsub_chat_view"/>
    <RelativeLayout
        android:id="@+id/chat_person_list"
        android:layout_width="match_parent"
        android:windowSoftInputMode="adjustPan"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/msg_notify"
            android:layout_width="@dimen/x40"
            android:layout_height="@dimen/x40"
            android:layout_marginTop="@dimen/x52"
            android:layout_marginLeft="@dimen/x700"
            android:src="@drawable/ic_wechat_information_speech_selected"/>
        <LinearLayout
            android:id="@+id/msg_white_list"
            android:layout_width="wrap_content"
            android:orientation="horizontal"
            android:layout_height="wrap_content">
            <ImageView
                android:layout_width="@dimen/x60"
                android:layout_height="@dimen/x40"
                android:paddingRight="@dimen/x20"
                android:visibility="visible"
                android:layout_marginTop="@dimen/x52"
                android:layout_marginLeft="@dimen/x70"
                android:src="@drawable/ic_wechat_information_messageremind"/>
            <TextView
                android:layout_width="wrap_content"
                android:textColor="#80ffffff"
                android:textSize="@dimen/x24"
                android:text="消息提醒"
                android:layout_marginTop="@dimen/x52"
                android:layout_height="wrap_content" />
        </LinearLayout>
        <android.support.v7.widget.RecyclerView
            android:id="@+id/rl_person_list"
            android:layout_marginTop="@dimen/x40"
            android:layout_below="@+id/msg_notify"
            android:layout_width="match_parent"
            android:layout_marginLeft="@dimen/x60"
            android:layout_marginRight="@dimen/x60"
            android:layout_height="@dimen/x696">
        </android.support.v7.widget.RecyclerView>
        <RelativeLayout
            android:id="@+id/info_list_control"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/x32"
            android:layout_alignParentBottom="true"
            android:layout_height="@dimen/y125">
            <TextView
                android:id="@+id/lastpage"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y54"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x120"
                android:background="@drawable/selector_button_turn_page"
                android:gravity="center"
                android:text="上一页"
                android:textColor="@drawable/selector_button_turn_page_color"
                android:textSize="20px" />

            <TextView
                android:id="@+id/currentinfoPage"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y54"
                android:layout_centerInParent="true"
                android:layout_marginLeft="@dimen/x120"
                android:gravity="center"
                android:text="1/3"
                android:textColor="#99ffffff"
                android:textSize="24px" />

            <TextView
                android:id="@+id/nextpage"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y54"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x120"
                android:layout_marginRight="@dimen/x114"
                android:background="@drawable/selector_button_turn_page"
                android:gravity="center"
                android:text="下一页"
                android:textColor="@drawable/selector_button_turn_page_color"
                android:textSize="20px" />
        </RelativeLayout>
        <RelativeLayout
            android:id="@+id/white_list_control"
            android:layout_width="match_parent"
            android:layout_marginBottom="@dimen/x32"
            android:layout_alignParentBottom="true"
            android:visibility="gone"
            android:layout_height="@dimen/y125">
            <TextView
                android:id="@+id/addwhite_list"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y54"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x120"
                android:background="@drawable/shape_button_turn_page_selected"
                android:gravity="center"
                android:text="添加提醒"
                android:textColor="@color/color_turn_page_selected"
                android:textSize="20px" />
            <TextView
                android:id="@+id/cancel_addwhite_list"
                android:layout_width="@dimen/x144"
                android:layout_height="@dimen/y54"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_marginLeft="@dimen/x120"
                android:layout_marginRight="@dimen/x114"
                android:background="@drawable/shape_button_turn_page_selected"
                android:gravity="center"
                android:text="取消"
                android:textColor="@color/color_turn_page_selected"
                android:textSize="20px" />
        </RelativeLayout>
    </RelativeLayout>
</RelativeLayout>
