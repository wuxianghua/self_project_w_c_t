<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/ll_container"
    android:layout_marginTop="@dimen/y3"
    android:layout_width="match_parent"
    android:layout_height="@dimen/y116">
    <CheckBox
        android:id="@+id/select_white_item"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:visibility="gone"
        style="@style/CustomCheckboxTheme"
        android:layout_marginLeft="@dimen/x5"
        android:layout_centerVertical="true"/>
    <ImageView
        android:id="@+id/item_chat_image"
        android:layout_marginLeft="@dimen/x24"
        android:layout_width="@dimen/x66"
        android:layout_height="@dimen/x66"
        android:layout_toRightOf="@+id/select_white_item"
        android:layout_centerVertical="true"/>
    <TextView
        android:id="@+id/item_chat_name"
        android:layout_width="wrap_content"
        android:textColor="#ffffff"
        android:textSize="@dimen/x28"
        android:layout_toRightOf="@+id/item_chat_image"
        android:layout_marginLeft="@dimen/x24"
        android:layout_alignTop="@+id/item_chat_image"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/item_last_info"
        android:layout_width="@dimen/y470"
        android:textColor="#80ffffff"
        android:textSize="@dimen/x24"
        android:singleLine="true"
        android:ellipsize="end"
        android:layout_toRightOf="@+id/item_chat_image"
        android:layout_marginLeft="@dimen/x24"
        android:layout_alignBottom="@+id/item_chat_image"
        android:layout_height="wrap_content" />
    <TextView
        android:id="@+id/update_time"
        android:layout_alignParentRight="true"
        android:layout_marginRight="@dimen/x20"
        android:layout_alignTop="@+id/item_chat_image"
        android:textSize="@dimen/x20"
        android:textColor="#80ffffff"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />
</RelativeLayout>